//connect dend(0), soma(0)

//objectvar VoltageClamp
//VoltageClamp=new SEClamp(0.5)
//VoltageClamp.dur1=10
//VoltageClamp.rs=.01

access soma
objectvar stim
stim = new IClamp(0.5)
stim.del=100
stim.dur=200
stim.amp=0.1

tstop=400

